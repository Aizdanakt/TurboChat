<div id="chatroom_container" class="row bg-dark text-light">
  <div id="side_panel" class="col-md-4 col-sm-4 d-flex flex-column">
    <h5 class="p-3"> <%= current_user.email %> </h5>
    <div id="users" class="p-3 flex-grow-1">
      <h4 class="mb-3"> Users </h4>
      <%= turbo_stream_from "users" %>
      <%= render @users %>
    </div>
    <div id="rooms" class="p-3 flex-grow-1">
      <h4 class="mb-3"> Rooms </h4>
      <%= turbo_stream_from "rooms" %>
      <%= render 'layouts/new_room_form' %>
      <%= render @rooms %>
    </div>
  </div>
  <div id="room_container" class="col-md-8 col-sm-8 bg-dark text-light d-flex flex-column">
    <% if @single_room %>
      <div id="single_room" class="d-flex flex-column flex-grow-1">
        <h4 class="text-center p-3"> <%= @user&.email || @single_room.name %> </h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages" class="p-3 flex-grow-1">
          <%= render @messages %>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
